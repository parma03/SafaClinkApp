<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- OpenStreetMap View -->
    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true" />

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/primary_color"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_left"
            android:contentDescription="Kembali"
            app:tint="@android:color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pilih Lokasi"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <!-- Center Crosshair -->
    <ImageView
        android:id="@+id/centerMarker"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_crosshari"
        android:contentDescription="Center Marker"
        app:tint="@color/primary_color" />

    <!-- My Location Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnMyLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_my_location_24"
        android:contentDescription="Lokasi Saya"
        app:tint="@android:color/white"
        app:backgroundTint="@color/primary_color" />

    <!-- Bottom Panel -->
    <LinearLayout
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:elevation="8dp"
        android:padding="16dp">

        <!-- Instructions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gerakkan peta untuk memilih lokasi"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Selected Address -->
        <TextView
            android:id="@+id/tvSelectedAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_bg"
            android:padding="12dp"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:minHeight="48dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:visibility="visible"
            android:text="Alamat akan ditampilkan di sini" />

        <!-- Confirm Button -->
        <Button
            android:id="@+id/btnConfirmLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Konfirmasi Lokasi"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/success_color"
            android:enabled="true" />

    </LinearLayout>

</RelativeLayout>